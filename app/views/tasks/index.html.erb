<div class="container">
  <h1>My tasks</h1>

  <% @tasks.each do |task| %>
    <div class="taskbox">
      <% if task.completed == true %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%# (task) is the id %>
      <p><%= link_to task.title, task_path(task) %></p>
      <%= link_to task_path(task), method: :delete, data: { confirm: "Do you want to delete #{task.title}" } do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
  <% end %>

  <hr>

  <%= link_to 'Add a new task', new_task_path, class:'btn btn-primary' %>


</div>
